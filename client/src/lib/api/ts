export const API_BASE = import.meta.env.VITE_API_URL!; // e.g. https://xyz.up.railway.app

export async function api(path: string, init: RequestInit = {}) {
  const res = await fetch(`${API_BASE}${path}`, {
    credentials: 'include', // send cookie for session routes
    headers: { 'Content-Type': 'application/json', ...(init.headers || {}) },
    ...init,
  });
  return res;
}
